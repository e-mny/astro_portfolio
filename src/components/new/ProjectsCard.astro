---
import { Icon } from "astro-icon/components";
import Card from "../Card/index.astro";
import { ScrollAreaDemo } from "./ProjectsList";

---

<Card colSpan="sm:col-span-2 md:col-span-1" rowSpan="sm:row-span-5 md:row-span-2 lg:row-span-3 gap-4 lg:overflow-y-hidden">
  <div class="flex flex-col justify-between">
    <div class="flex flex-row justify-between">
      <h1 class="text-xl">Projects</h1>
      <a href="/projects" class="h-max w-full border-white border-spacing-52">
        <Icon name="material-symbols:keyboard-double-arrow-right-rounded"
        class="h-6 float-right hover:text-primary-500 hover:translate-x-1 hover:-translate-y-1 transition-transform ease-in-out duration-100 border-white border-spacing-52"
        />
      </a>
    </div>
      
    <ScrollAreaDemo client:only="react" addClass=""/>
  </div>
</Card>
