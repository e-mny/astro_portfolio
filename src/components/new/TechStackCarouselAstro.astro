---
import TechStackCarousel from "./TechStackCarousel";
import { shuffle } from "d3";


const imageFiles = await Astro.glob("../../../src/assets/tech_icons/*.svg");
let imageArr = imageFiles.map((image) => {
    // Getting alt_text
    let fileName: string = image.default.src.split("/")[image.default.src.split("/").length-1]
    let alt_text: string = fileName.split(".")[0]


    const TechStackNames = {
      "python": "Python",
      "javascript": "JavaScript",
      "typescript": "TypeScript",
      "html": "HTML",
      "css": "CSS",
      "react": "React",
      "golang": "Go",
      "pytorch": "PyTorch",
    };
    let corrected_alt_text: string = TechStackNames[alt_text.toLowerCase()]

    return {
      ...image,
    alt: corrected_alt_text
  }
  })


---

<TechStackCarousel images={imageArr} client:only="react"/>
