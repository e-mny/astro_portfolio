---
import { Icon } from "astro-icon/components";
import Content from "./Content.astro";
import clsx from 'clsx'

interface Props {
  title?: string;
  body?: string;
  colSpan?: string;
  rowSpan?: string;
  href?: string;
  colorText?: string;
  height?: string;
  width?: string;
  addClass?: string;
  numCard?: boolean;
  pad?: string;
}

const { title, body, colSpan, rowSpan, href, colorText, height, width, addClass, numCard, pad } = Astro.props;
---

